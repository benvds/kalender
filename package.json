{
  "name": "kalender",
  "version": "0.3.0",
  "description": "Basic component for rendering calendars.",
  "main": "./src/kalender.js",
  "dependencies": {},
  "devDependencies": {
    "babel": "^5.8.9",
    "babelify": "^6.1.3",
    "browserify": "^11.2.0",
    "exorcist": "^0.4.0",
    "jscs": "^1.12.0",
    "jshint": "^2.7.0",
    "mocha": "^2.2.1",
    "uglify-js": "^2.4.20"
  },
  "scripts": {
    "test": "mocha --harmony --compilers js:babel/register",
    "test-watch": "mocha --watch --harmony --compilers js:babel/register",
    "lint:hint": "jshint src",
    "lint:styleguide": "jscs src",
    "lint": "npm run lint:hint && npm run lint:styleguide",
    "dist:bundle": "browserify ./index.js -t babelify --standalone kalender --debug | exorcist ./dist/kalender.js.map > ./dist/kalender.js",
    "dist:compress": "uglifyjs --compress warnings=false --mangle --bare-returns --output ./dist/kalender.min.js -- ./dist/kalender.js",
    "dist": "npm run dist:bundle && npm run dist:compress"
  },
  "author": {
    "name": "Ben van de Sande",
    "email": "ben@pomodoro.nl"
  },
  "license": "MIT",
  "jshintConfig": {
    "node": true,
    "quotmark": "single",
    "unused": "strict",
    "maxparams": 3,
    "maxdepth": 3,
    "maxstatements": 5,
    "esnext": true
  },
  "jscsConfig": {
    "preset": "airbnb",
    "validateIndentation": 4,
    "disallowNewlineBeforeBlockStatements": null,
    "requireSpaceBeforeBlockStatements": null,
    "esnext": true
  }
}
